<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.CreateAccNVActivity">

    <EditText
        android:layout_margin="8dp"
        android:id="@+id/add_Account_NV_Id"
        android:hint="ID NV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:inputType="textPassword"
        android:layout_margin="8dp"
        android:id="@+id/add_Account_NV_Password"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:inputType="textPassword"
        android:layout_margin="8dp"
        android:id="@+id/add_Account_NV_RePassword"
        android:hint="RePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="AddAccNV"
        android:text="Create Account NV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>