<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nhanVien.AddNhanVienActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_nhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="THÊM NHÂN VIÊN"
        app:titleMarginStart="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="253dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_nhanVien">

        <ImageView
            android:id="@+id/nhanVien_editNhanVien_imgPicture"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/staff" />
    </androidx.cardview.widget.CardView>



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:id="@+id/nhanVien_addNV_edtId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:hint="ID" />



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nhanVien_addNV_edtName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:digits="ăâôơưđêáàảạãấầẩậẫắằẳặẵóòỏọõốồổộỗớờởợỡúùủũụứừựửữéèẻẽẹếềểễệýỳỷỹỵíìĩịỉabcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Tên" />



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nhanVien_addNV_edtSdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:inputType="number"
            android:hint="Sdt" />



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nhanVien_addNV_edtChucVu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:digits="ăâôơưđêáàảạãấầẩậẫắằẳặẵóòỏọõốồổộỗớờởợỡúùủũụứừựửữéèẻẽẹếềểễệýỳỷỹỵíìĩịỉabcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Chức Vụ" />



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nhanVien_addNV_edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:digits="ăâôơưđêabcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáàảạãấầẩậẫắằẳặẵóòỏọõốồổộỗớờởợỡúùủũụứừựửữéèẻẽẹếềểễệýỳỷỹỵíìĩịỉ"
            android:hint="Địa Chỉ" />



        <EditText
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/nhanVien_addNV_edtNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_bg"
            android:inputType="date"
            android:hint="Ngày Sinh" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/nhanVien_addNV_btnThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_bg"
        android:onClick="addNhanVien"
        android:text="Thêm"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>