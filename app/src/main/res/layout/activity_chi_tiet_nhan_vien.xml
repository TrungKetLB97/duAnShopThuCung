<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nhanVien.chiTietNhanVienActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_post_chiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="CHI TIẾT NHÂN VIÊN "
        app:titleMarginStart="115dp"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_post_chiTiet">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nhanVien_detail_imgNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/no_image" />

            <TextView
                android:id="@+id/nhanVien_detail_tvIDNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="ID"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/nhanVien_detail_tvNameNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Tên"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nhanVien_detail_tvTuoiNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Tuổi"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nhanVien_detail_tvNgaySinhNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Ngày Sinh"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nhanVien_detail_tvChucVuNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Chức Vụ"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nhanVien_detail_tvSDTNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Số Điện Thoại"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/nhanVien_detail_tvDiaChiNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Địa Chỉ"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" >

        <Button
            android:id="@+id/nhanVien_detail_btnEditNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:text="Edit" />
        <Button
            android:id="@+id/nhanVien_detail_btnDeleteNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:text="Delete" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>